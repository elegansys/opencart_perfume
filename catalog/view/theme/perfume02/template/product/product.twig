      <p>{{ text_tags }}

        {% for i in 0..tags|length %}

        {% if i < (tags|length - 1) %}

        <a href="{{ tags[i].href }}">{{ tags[i].tag }}</a>,

        {% else %}

        <a href="{{ tags[i].href }}">{{ tags[i].tag }}</a>

        {% endif %}

        {% endfor %}

      </p>

      {% endif %}-->

                    {{ content_bottom }}
                </div>

            </div>

