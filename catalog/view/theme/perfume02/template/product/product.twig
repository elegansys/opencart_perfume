                            <div class="product-thumb transition">

                                <div class="image product-image"><a href="{{ product.href }}">

                                    <img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-responsive" /></a>

                                    <div class="action">
                                       <div class="action_inner">
                                            <div class="button-group">
                                                 <button type="button" class="wishlist_button" data-toggle="tooltip" title="{{ button_wishlist }}" onclick="wishlist.add('{{ product.product_id }}');"><i class="fa fa-heart-o"></i></button>
                                                 <a href="{{ product.href }}"><button type="button" class="compare_button" data-toggle="tooltip" title="{{ button_compare }}"><i class="fa fa-eye"></i></button></a>
                                                 <!--<button type="button" onclick="cart.add('{{ product.product_id }}');" class="cart_text" data-toggle="tooltip" title="{{ button_cart }}">Add To Cart</button>-->
                                                 <button type="button" class="addcart_button" onclick="cart.add('{{ product.product_id }}');" class="cart_text" data-toggle="tooltip" title="{{ button_cart }}"><i class="fal fa-cart-plus"></i></button>
                                            </div>
                                        </div> 
                                    </div>

                                </div>

            <div class="caption">

              <h5><a href="{{ product.href }}">{{ product.name }}</a></h5>

              {% if product.price %}

              <p class="price">

                {% if not product.special %}

                {{ product.price }}

                {% else %}

                <span class="price-new">{{ product.special }}</span> <span class="price-old">{{ product.price }}</span>

                                                    {% endif %}

                                                    {% if product.tax %}

                                                    <span class="price-tax">{{ text_tax }} {{ product.tax }}</span>

                                                    {% endif %}

                                                    </p>

                                                    {% endif %}

                                                    <div class="rating">

                                                        
                                                        {% for i in 1..5 %}

                                                        {% if product.rating < i %}

                                                        <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i></span>

                                                        {% else %}

                                                        <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star fa-stack-2x"></i></span>

                                                        {% endif %}

                                                        {% endfor %}

                                                    </div>

                                            </div>

                                        </div>

                                    </div>

                                </div>

                                {% set i = i + 1 %}

                                {% endfor %}

                            </div>

                            {% endif %}

                        </div>

                    </div>

